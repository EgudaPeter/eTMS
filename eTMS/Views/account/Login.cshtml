
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!--<link rel="shortcut icon" href="../images/favicon.png" type="image/png">-->
    <title>Login :: Multiplan</title>
    <link rel="stylesheet" href="~/Content/lib/fontawesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/css/quirk.css">
    <script src="~/Content/lib/modernizr/modernizr.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="@Url.Content("~/Content/lib/html5shiv/html5shiv.js")"></script>
    <script src="@Url.Content("~/Content/lib/respond/respond.src.js")"></script>
    <![endif]-->
    <style type="text/css">
        .panel{
            background-color:#4a4949;
            background-image: none !important;
        }
    </style>
</head>
<body class="signwrapper">
    <div class="sign-overlay"></div>
    <div class="signpanel"></div>
    <div class="panel signin">
        <div class="panel-heading">
            <h1>Multi-Plan</h1>
            <br />
            <div class="or">Signin</div>
            <br />
            @*<h4 class="panel-title">Signin</h4>*@
        </div>
   @using (@Html.BeginForm("SignIn","Login", FormMethod.Post))
   {
       @Html.AntiForgeryToken();
       @Html.ValidationSummary(true)
       <div class="panel-body">
            @*<button class="btn btn-primary btn-quirk btn-fb btn-block">Connect with Facebook</button>
            <div class="or">or</div>*@
            <form action="index.html">
                <div class="form-group mb10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" class="form-control" placeholder="Enter Username">
                    </div>
                </div>
                <div class="form-group nomargin">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="text" class="form-control" placeholder="Enter Password">
                    </div>
                </div>
                <div><a href="" class="forgot">Forgot password?</a></div>
                <div class="form-group">
                    <button class="btn btn-success btn-quirk btn-block">Sign In</button>
                </div>
            </form>
            <hr class="invisible">
            <div class="form-group">
                @* <a href="signup.html" class="btn btn-default btn-quirk btn-stroke btn-stroke-thin btn-block btn-sign">Not a member? Sign up now!</a>*@
            </div>
        </div>
   }  
        <div class="container body-content">
            <footer>
                <p style="color: rgba(255, 255, 255, 0.5);">&copy; @DateTime.Now.Year - Simplex Business Solutions Ltd</p>
            </footer>
        </div>
    </div><!-- panel -->
</body>
</html>

