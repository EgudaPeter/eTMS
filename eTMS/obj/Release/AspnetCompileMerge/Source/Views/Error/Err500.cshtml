
@{
    ViewBag.Title = "Err500";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Unhandled Exception
        </h3>
    </div>

    <div class="panel-body">
        <div class="form-horizontal">
            @{
                var errorDetails = (Exception)ViewBag.Error;

                <div class="form-group">
                    <label class="col-md-3 control-label">Error Message</label>
                    <div class="col-md-9">
                        <p class="form-control-static">@errorDetails.Message </p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Inner Exception</label>
                    <div class="col-md-9">
                        <p class="form-control-static">@errorDetails.InnerException.Message</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Stack Trace</label>
                    <div class="col-md-9">
                        <p class="form-control-static">@errorDetails.StackTrace</p>
                    </div>
                </div>

            }
        </div>
    </div>

</div>



