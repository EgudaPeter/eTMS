    function RefreshScreen() {
         var sDate = startDate.GetDate();
         var eDate = endDate.GetDate();
         if (sDate == null || sDate == "") {
             swal({
                 title: "Warning!",
                 html: "Please specify a <b> Start Date </b>!",
                 type: 'warning',
                 allowOutsideClick:false
             });
             return;
         }
         if (eDate == null || eDate == "") {
             swal({
                 title: "Warning!",
                 html: "Please specify an <b> End Date </b>!",
                 type: 'warning',
                 allowOutsideClick: false
             });
             return;
         }

         SiteUtils.loading("Refreshing...");

         DashBoard_TransactionsGridView.PerformCallback({
             _startDate: sDate,
             _endDate:eDate
         });
         DashBoard_ReceiptsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_AccountsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_DebtorsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_ResolvedDebtorsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_DealersGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_DebtsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_ResolvedDebtsGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });
         DashBoard_ProfitAndLossGridView.PerformCallback({
             _startDate: sDate,
             _endDate: eDate
         });

         $.ajax({
             url: '@Url.Action("RefreshScreen", "Admin",new { Area = "Admin" })',
             type: 'Post',
             data: { _startDate: sDate, _endDate: eDate },
             success: function (data) {
                 SiteUtils.loadingOff();
                 if (data.success == true) {
                     $("#transactions").text(data.transactions);
                     $("#transactions_amount").text(data.transactions_amount);

                     $("#receipts").text(data.receipts);
                     $("#receipts_amount").text(data.receipts_amount);

                     $("#accounts").text(data.accounts);
                     $("#accounts_amount").text(data.accounts_amount);

                     $("#debtors").text(data.debtors);
                     $("#debtors_amount").text(data.debtors_amount);

                     $("#resolvedDebtors").text(data.resolvedDebtors);
                     $("#resolvedDebtors_amount").text(data.resolvedDebtors_amount);

                     $("#dealers").text(data.dealers);

                     $("#debts").text(data.debts);
                     $("#debts_amount").text(data.debts_amount);

                     $("#resolvedDebts").text(data.resolvedDebts);
                     $("#resolvedDebts_amount").text(data.resolvedDebts_amount);

                     $("#profit").text(data.profit);
                     $("#loss").text(data.loss);
                     return;
                 }
                 if (data.success == -1) {
                     swal({
                         title: 'Error!',
                         html: data.errorMessage,
                         type: 'error',
                         allowOutsideClick:false
                     });
                     return;
                 }
             }
         });
    } //Refresh Screen

    function GetAllStats() {
        if (startDate.GetDate() != null) {
