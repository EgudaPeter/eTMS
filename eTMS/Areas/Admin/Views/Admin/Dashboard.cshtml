                        <div class="form-group pull-right">
                            <div class="form-group">
                                <div class="btn-group pull-right">
                                    @Html.DevExpress().Button(settings =>
                                        {
                                            settings.Name = "btn_GetAllStats";

                                            settings.Width = 100;
                                            settings.Text = "Get all stats";
                                            settings.ToolTip = " Get all Stats";
                                            settings.ControlStyle.CssClass = "btn btnGetAllStats";
                                            settings.ClientSideEvents.Click = "GetAllStats";
                                            settings.ControlStyle.Border.BorderStyle = BorderStyle.Solid;
                                        }).GetHtml()
